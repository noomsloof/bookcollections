@model Book;
@{
}

<div class="card">
    <div class="card-header">
        @Model.Category
    </div>
    <div class="card-body">
        
        <div class="row">
            <div class="col-3"> <img src="data:image/png;base64,@Model.Image64" class="card-img-top" alt="..."> </div>
            <div class="col-9 d-flex flex-column justify-content-center align-items-center text-center">
                <h5> @Model.BookName </h5>
                <p> @Model.Description </p>
                <div class="position-absolute bottom-0 end-0 p-2">  @Model.Author </div>
            </div> 
        </div>
        
    </div>
</div>